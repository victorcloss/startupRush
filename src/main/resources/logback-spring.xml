<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <include resource="org/springframework/boot/logging/logback/base.xml"/>

    <!-- Configuração para logs mais detalhados -->
    <logger name="com.victorclossduarte.startupRush" level="DEBUG"/>
    <logger name="org.hibernate.SQL" level="DEBUG"/>
    <logger name="org.hibernate.type.descriptor.sql.BasicBinder" level="TRACE"/>

    <!-- Log específico para os serviços de batalha e torneio -->
    <logger name="com.victorclossduarte.startupRush.service.BattleService" level="DEBUG"/>
    <logger name="com.victorclossduarte.startupRush.service.TournamentService" level="DEBUG"/>

    <!-- Log para transações -->
    <logger name="org.springframework.transaction" level="DEBUG"/>
    <logger name="org.springframework.orm.jpa" level="DEBUG"/>
</configuration>